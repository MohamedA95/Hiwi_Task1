{
    "name": "CIFAR10_Quant_VGG",
    "n_gpu": 1,

    "arch": {
        "type": "QuantVGG",
        "args": {
            "VGG_type":"D",
            "batch_norm": false
        }
    },
    "data_loader": {
        "type": "CIFAR_data_loader",
        "args":{
            "data_dir": "data/",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 0,
            "flavor":10
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.001,
            "momentum": 0.9
        }
    },
    "loss": "CrossEntropy",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 20,
        "save_dir": "saved/",
        "save_period": 5,
        "verbosity": 2,
        "monitor": "max val_accuracy",
        "early_stop": -1,
        "tensorboard": false
    }
}
