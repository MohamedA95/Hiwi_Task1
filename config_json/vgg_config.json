{
    "name": "VGGD",
    "n_gpu": 1,

    "arch": {
        "type": "VGG_net",
        "args": {
            "VGG_type":"D",
            "batch_norm": false,
            "num_classes": 100
        }
    },
    "data_loader": {
        "type": "CIFAR_data_loader",
        "args":{
            "data_dir": "data/",
            "download":false,
            "batch_size": 128,
            "flavor":100,
            "num_workers":8
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.01,
            "momentum": 0.9,
            "weight_decay": 0.0005
        }
    },
    "loss": "CrossEntropy",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "ReduceLROnPlateau",
        "args": {
            "mode": "max",
            "factor": 0.1,
            "verbose": true
        },
        "metric":"val_accuracy"
    },
    "trainer": {
        "epochs": 10,
        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2,
        "monitor": "max val_accuracy",
        "early_stop": -1,
        "tensorboard": false
    }
}
