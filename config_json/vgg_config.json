{
    "name": "CIFAR100_VGGABN",
    "n_gpu": 1,

    "arch": {
        "type": "VGG_net",
        "args": {
            "VGG_type":"A",
            "batch_norm": true
        }
    },
    "data_loader": {
        "type": "CIFAR_data_loader",
        "args":{
            "data_dir": "/scratch/mmoursi/CIFAR_DATA",
            "download":false,
            "batch_size": 128,
            "flavor":100
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.01,
            "momentum": 0.9,
            "weight_decay": 0.0005
        }
    },
    "loss": "CrossEntropy",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "ReduceLROnPlateau",
        "args": {
            "mode": "max",
            "factor": 0.1,
            "verbose": true
        },
        "metric":"val_accuracy"
    },
    "trainer": {
        "epochs": 30,
        "save_dir": "saved/",
        "save_period": 30,
        "verbosity": 1,
        "monitor": "max val_accuracy",
        "early_stop": -1,
        "tensorboard": false
    }
}