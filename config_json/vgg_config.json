{
    "name": "Img_VGGD",
    "n_gpu": 4,

    "arch": {
        "type": "VGG_net",
        "args": {
            "num_classes": 1000,
            "VGG_type":"D",
            "batch_norm": false
        }
    },
    "data_loader": {
        "type": "ImageNet_data_loader",
        "args":{
            "data_dir": "/scratch/mmoursi",
            "batch_size": 512,
            "shuffle":true,
            "num_workers":0,
            "pin_memory":true
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.01,
            "momentum": 0.9,
            "weight_decay": 0.0005
        }
    },
    "loss": "CrossEntropy",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "ReduceLROnPlateau",
        "args": {
            "mode": "max",
            "factor": 0.1,
            "verbose": true
        },
        "metric":"val_accuracy"
    },
    "trainer": {
        "epochs": 10,
        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2,
        "monitor": "max val_accuracy",
        "early_stop": -1,
        "tensorboard": false
    }
}