{
    "name": "CIFAR100_VGG",
    "n_gpu": 1,

    "arch": {
        "type": "VGG_net",
        "args": {
            "VGG_type":"D",
            "batch_norm": false
        }
    },
    "data_loader": {
        "type": "ImageNet_data_loader",
        "args":{
            "data_dir": "data/",
            "batch_size": 8,
            "shuffle": true,
            "num_workers": 0,
            "pin_memory":true
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.1,
            "momentum": 0.9
        }
    },
    "loss": "CrossEntropy",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 100,
        "verbosity": 1,
        "monitor": "max val_accuracy",
        "early_stop": -1,
        "tensorboard": false
    }
}