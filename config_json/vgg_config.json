{
    "name": "CIFAR10_VGG",
    "n_gpu": 1,

    "arch": {
        "type": "VGG_net",
        "args": {
            "VGG_type":"D",
            "batch_norm": true
        }
    },
    "data_loader": {
        "type": "CIFAR_data_loader",
        "args":{
            "data_dir": "data/",
            "batch_size": 256,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 0,
            "flavor":10
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.1,
            "momentum": 0.9
        }
    },
    "loss": "CrossEntropy",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "ReduceLROnPlateau",
        "args": {
            "mode": "max",
            "factor": 0.1
        }
    },
    "trainer": {
        "epochs": 150,
        "save_dir": "saved/",
        "save_period": 150,
        "verbosity": 1,
        "monitor": "max val_accuracy",
        "early_stop": -1,
        "tensorboard": false
    }
}