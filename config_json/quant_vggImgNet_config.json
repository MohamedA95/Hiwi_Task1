{
    "name": "ImageNet_Quant_VGG",
    "n_gpu": 2,

    "arch": {
        "type": "QuantVGG",
        "args": {
            "VGG_type":"D",
            "batch_norm": false
        }
    },
    "data_loader": {
        "type": "ImageNet_data_loader",
        "args":{
            "data_dir": "/scratch/mmoursi/",
            "batch_size": 256,
            "shuffle": true,
            "num_workers": 2,
            "pin_memory": true
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.001,
            "momentum": 0.9
        }
    },
    "loss": "CrossEntropy",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 300,
        "save_dir": "saved/",
        "save_period": 50,
        "verbosity": 1,
        "monitor": "max val_accuracy",
        "early_stop": -1,
        "tensorboard": false
    }
}
